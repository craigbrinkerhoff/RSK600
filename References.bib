  file = {C\:\\Users\\craig\\Zotero\\storage\\AA4SJE7J\\2019GL084529.html},
  journal = {Geophysical Research Letters},
  keywords = {AMHG,fluvial geomorphology,hydraulic geometry,hydrology,open channel flow,rivers},
  language = {en},
  number = {16}
}

@article{coleCarbonCatchmentsConnecting2001a,
