@article{durandEstimatingReachaveragedDischarge2014a,
  title = {Estimating Reach-Averaged Discharge for the {{River Severn}} from Measurements of River Water Surface Elevation and Slope},
  author = {Durand, Michael and Neal, Jeffrey and Rodr{\'i}guez, Ernesto and Andreadis, Konstantinos M. and Smith, Laurence C. and Yoon, Yeosang},
