	year = {2017},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/hyp.11033},
	keywords = {braided rivers, effective hydraulics, hydrodynamical signature, satellite altimetry},
	pages = {756--767},
	file = {Snapshot:C\:\\Users\\craig\\Zotero\\storage\\DDDFEUBT\\hyp.html:text/html;Full Text PDF:C\:\\Users\\craig\\Zotero\\storage\\WXVVYDWD\\Garambois et al. - 2017 - Hydraulic visibility Using satellite altimetry to.pdf:application/pdf},
