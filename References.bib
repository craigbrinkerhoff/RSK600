	file = {Snapshot:C\:\\Users\\craig\\Zotero\\storage\\UBRNYUBJ\\lno.html:text/html;Full Text PDF:C\:\\Users\\craig\\Zotero\\storage\\IBNWCPIQ\\Aho et al. - 2021 - Distinct concentration-discharge dynamics in tempe.pdf:application/pdf},
