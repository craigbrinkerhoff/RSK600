	author = {Altenau, Elizabeth H. and Pavelsky, Tamlin M. and Durand, Michael T. and Yang, Xiao and Frasson, Renato Prata de Moraes and Bendezu, Liam},
	year = {2021},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2021WR030054},
	keywords = {data set, hydrography, hydrology, rivers, SWORD, SWOT},
	pages = {e2021WR030054},
	annote = {e2021WR030054 2021WR030054},
	file = {Full Text PDF:C\:\\Users\\craig\\Zotero\\storage\\F7QE9HIM\\Altenau et al. - 2021 - The Surface Water and Ocean Topography (SWOT) Miss.pdf:application/pdf},
