  publisher = {{Water Environment Federation}},
  issn = {0043-1303},
  abstract = {Field radiotracer measurements of the reaeration rate coefficient, \$K\_\{2\}\$, in 24 different streams are summarized and used to develop an energy dissipation model for predicting reaeration in nontidal free-flowing streams. The field studies included a wide range of hydraulic properties and stream flows. The energy dissipation model is \$K\_\{2\}=C\textbackslash,(\textbackslash Delta h/t\_\{f\})\$, where \$K\_\{2\}\$ is the reaeration rate coefficient (natural base), {$\Delta$}h is the water surface elevation change through a stream segment, \$t\_\{f\}\$ is the time of flow, and C is the escape coefficient. In a total of 605 individual field tracer measurements of \$K\_\{2\}\$ and the associated hydraulic properties, the observed coefficients ranged from essentially zero to as much as 15.0/hr at waterfalls. For predictive purposes, recommended values are provided for the escape coefficient, C. In addition, a general stream slope model is presented, although it is not as reliable as the energy dissipation model.},
  journal = {Journal (Water Pollution Control Federation)},
  number = {12}
}

@article{uehlingerEcosystemMetabolismDisturbance1998,
