}

@article{branchSurfaceTurbulenceReveals2021,
  title = {Surface {{Turbulence Reveals Riverbed Drag Coefficient}}},
  author = {Branch, R. A. and {Horner-Devine}, A. R. and Chickadel, C. C. and Talke, S. A. and Clark, D. and Jessup, A. T.},
